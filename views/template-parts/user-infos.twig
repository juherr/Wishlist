<section class="user-infos">

	<div class="avatar-wrapper">
		<img src="assets/img/avatar/avatar{{ currentUser.infos.picture }}.png" alt="">
		<div class="svg-wrapper">
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 114.73 131.54"><path class="a" d="M101.72,14.09c11.6,13,12.9,34.8,13,56.8s-1,44-12.6,53.8-33.6,7.4-51.6,3.2-31.7-9.9-40.1-19.7S-.88,84.59.22,72s6.5-24.1,14.9-37.1,19.8-27.5,36.5-32.7S90.12,1.09,101.72,14.09Z"/></svg>
		</div>
	</div>

	<div class="inner-user-infos">

		<h1>{{ currentUser.infos.name|e }}</h1>

		<div class="user-infos-details-wrapper">	

			<div class="user-infos-details">

				{% if currentUser.infos.birthday_date is not empty %}

				<div class="birthday-infos">
					<div class="svg-wrapper">
						<object data="assets/img/svg-prod/baby.svg" type="image/svg+xml"></object>
					</div>
					<span class="birthday">{{ currentUser.infos.nice_birthday }}</span>
					<span class="age">{{ currentUser.infos.age }}</span>
				</div>

				{% endif %}

				{% if (currentUser.infos.size_top or currentUser.infos.size_bottom or currentUser.infos.size_feet) is not empty %}

				<div class="size-infos">

					{% if currentUser.infos.size_top is not empty %}
					<div class="wrapper-size" title="Taille haut">
						<div class="svg-wrapper">
							<object data="assets/img/svg-prod/tshirt.svg" type="image/svg+xml"></object>
						</div>
						<span class="top">{{ currentUser.infos.size_top|e }}</span>
					</div>
					{% endif %}

					{% if currentUser.infos.size_bottom is not empty %}
					<div class="wrapper-size" title="Taille pantalon">
						<div class="svg-wrapper">
							<object data="assets/img/svg-prod/pant.svg" type="image/svg+xml"></object>
						</div>
						<span class="bottom">{{ currentUser.infos.size_bottom|e }}</span>
					</div>
					{% endif %}

					{% if currentUser.infos.size_feet is not empty %}
					<div class="wrapper-size" title="Taille chaussure">
						<div class="svg-wrapper">
							<object data="assets/img/svg-prod/shoe.svg" type="image/svg+xml"></object>
						</div>
						<span class="feet">{{ currentUser.infos.size_feet|e }}</span>
					</div>
					{% endif %}

				</div>

				{% endif %}

			</div>

			{% if canEdit == true %}
	
			<a href="update-account.php?user={{ currentUser.infos.ID }}" class="bt border-primary-bt">Modifier les infos</a>

			{% endif %}

		</div>

	</div>
	
</section>