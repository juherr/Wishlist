{
    "require": {
        "php": "7.4.*",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^7.2",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.0",
        "rector/rector": "^0.7.16"
    },
    "autoload": {
        "psr-4": {
            "Wishlist\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wishlist\\Tests\\": "tests"
        }
    },
    "scripts": {
        "ecs": "@php vendor/bin/ecs check --fix",
        "phpstan": "@php vendor/bin/phpstan analyse src public --level 8",
        "rector": "@php vendor/bin/rector",
        "server": "@php -S localhost:8000 -t public"
    }
}
